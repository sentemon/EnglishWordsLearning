@model EnglishWordsLearning.Models.WordViewModel

@{
    ViewData["Title"] = "Test";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Translate the word</h2>
            @if (ViewBag.Result != null)
            {
                <p class="text-center" style="color: @(ViewBag.Result == "Correct!" ? "green" : "red")">@ViewBag.Result</p>
            }
            
            @if (ViewBag.TotalQuestions > 0)
            {
                <p class="text-center">Your result is @ViewBag.CorrectAnswers / @ViewBag.TotalQuestions  |  (@Math.Round(((double)ViewBag.CorrectAnswers / (double)ViewBag.TotalQuestions * 100), 2)%)</p>
            }

            <form asp-controller="Test" asp-action="Test" method="post" id="translationForm">
                <div class="form-group">
                    <label for="russian">Russian Word</label>
                    <input type="text" class="form-control" id="russian" name="russian" value="@Model.Russian" readonly />
                </div>
                <div class="form-group">
                    <label for="userTranslation">Your Translation</label>
                    <input type="text" class="form-control" id="userTranslation" name="userTranslation" />
                </div>
                <button type="submit" class="btn btn-primary btn-block">Check Translation</button>
            </form>

            @if (ViewData["ValidateMessage"] != null)
            {
                <div class="alert alert-danger mt-3">@ViewData["ValidateMessage"]</div>
            }
        </div>
    </div>
</div>

<script src="js/site.js"></script>